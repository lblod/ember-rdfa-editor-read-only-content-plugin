<AuPanel @active="true" as |section|>
  <section>
    <AuToolbar as |Group|>
      <Group>
        <AuHeading @level="4" @skin="4">{{this.title}}</AuHeading>
      </Group>
      <Group>
        <AuButtonGroup>
          <AuLinkExternal href={{this.documentLink}} @icon="pencil" @skin="naked">
            Edit
          </AuLinkExternal>
          <AuButton @skin="naked" @icon="link-broken" @alert="true" {{on "click" this.detach}}>
            Detach
          </AuButton>
        </AuButtonGroup>
      </Group>
    </AuToolbar>
  </section>
  <section>
    <AuContent>
      {{html-safe this.content}}
    </AuContent>
  </section>
</AuPanel>
